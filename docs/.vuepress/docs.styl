// Variable overrides (theme customization)
$content-class = '.custom'

// Import all styles
@import '../../src/styl/main.styl'

// Style example container
.custom
  margin: 0.85rem 0;

// Example background pattern
.example-pattern
  padding: 20px;
  background-color: #a4a3da;
  background-image: 
    linear-gradient(45deg, #bdbcef 25%, transparent 25%, transparent 75%, #bdbcef 75%, #bdbcef),
    linear-gradient(-45deg, #bdbcef 25%, transparent 25%, transparent 75%, #bdbcef 75%, #bdbcef);
  background-size: 12px 12px;
