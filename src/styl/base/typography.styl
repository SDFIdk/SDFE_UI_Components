html
  font-size 16px

$heading-base
  font-weight $heading-weight
  margin $heading-margin
  line-height $heading-line-height

// Apply class to <body>
{$content-class}
  color $text-body
  font-family $font-family-base
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size $font-size-base
  font-weight $font-weight-base
  // font-weight 300
  // font-size 0.938rem
  // letter-spacing 0rem
  line-height 1.25

  h1,
  .h1
    @extend $heading-base
    font-weight $h1-weight
    color $h1-color
    font-size $h1-size
    line-height $h1-line-height

  p
    // font-weight 300
    // font-size 0.938rem
    // letter-spacing 0rem
    // line-height 1.25rem
    margin-bottom 0.5rem

  b 
    font-weight 700

  a
    color $link-color


