html
  font-family "Roboto", Helvetica, Arial, sans-serif
  font-size 16px

body 
  color: $text-body

h1,
.h1
  font-weight 300
  color $h1-color
  font-size 2.813rem
  letter-spacing 0.02rem
  line-height 3.25rem
  margin-bottom 0.8rem

h2,
.h2
  font-weight 300
  color $h2-color
  font-size 1.375rem
  letter-spacing 0.02rem
  line-height 1.625rem
  margin-bottom 0.6rem

h3
.h3
  font-weight 400
  color $sdfe-dark
  font-size 1.188rem
  letter-spacing 0.04rem
  line-height 1.375rem
  margin-bottom 0.6rem

h4,
.h4
  font-weight 500
  color $sdfe-dark
  font-size 1rem
  letter-spacing 0.04rem
  line-height 1.188rem
  margin-bottom 0.4rem

h5,
.h5
  font-weight 700
  color $sdfe-dark
  font-size 0.75rem
  letter-spacing 0.06rem
  line-height 0.875rem
  margin-bottom 0.3rem
  text-transform uppercase

h6,
.h6
  font-weight 500
  color black
  font-size 0.75rem
  letter-spacing 0.06rem
  line-height 0.875rem
  margin-bottom 0.3rem
  text-transform uppercase

p
  font-weight 300
  font-size 0.938rem
  letter-spacing 0rem
  line-height 1.25rem
  margin-bottom 1rem

a
  color $link-color