.ui-card
  border: 5px solid rgba(#f5f5f5, 0.5)
  border-radius: 14px
  background: #fff;
  min-width: 300px

.ui-card__wrapper
  border: 1px solid #c3c3c3
  border-radius: 9px
  overflow: hidden

.ui-card__body
  padding: 10px 15px

.ui-card__footer 
  background-color: #f2f2f2
  padding: 10px 15px

.ui-card__tabs
  display: flex

.ui-card__tab
  button-reset()
  flex: 1
  font-weight: 700
  background-color: #f2f2f2
  border-left: 1px #c3c3c3 solid
  border-bottom: 1px #c3c3c3 solid
  height: 40px
  padding: 10px
  color: #333
  cursor: pointer
  box-sizing: border-box

  &:first-child 
    border-left none

  &.selected
    background-color: #fff
    border-bottom-color: #fff
    color: #0097a7