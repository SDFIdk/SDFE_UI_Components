$background-color = #F5F5F5
$label-default = #C5C5C5
$gray-one = #E1E1E1
$gray-two = #EBEBEB
$gray-three = #F0F0F0
$gray-subtitle = #B0B0B0
$background-color-opacity = rgba(245,245,245,0.95)
$sdfe-teal = #0097A7
$sdfe-green = #3B9CA7
$sdfe-black = #0D1313
$sdfe-blue = #1991EB
$fact-green = #6BB9B9
$sdfe-dark = #333333
$sdfe-gray = #595959
$sdfe-lightgray = #bfbfbf
$sdfe-border-color = #c3c3c3
$hip-title-color = #5EB247
$hip-tealgray = #e1eced
$huge-border-radius = 14px
$big-border-radius = 9px
$small-border-radius = 4px
$border = 1px $sdfe-border-color solid
$transparent-background = rgba(245,245,245,0.5)

// 
// Settings
// 

// Class to apply to wrapping element, for scoping styles
// Used on either <body>  or in the case of the docs, on the custom wrapping div
$content-class ?= '.sdfe-ui'

//
// Colors
//  

$text-body = #333
$text-discreet = #595959

$link-color = #0097a7

$border-color = #c3c3c3

$heading-color = #000

//
// Typography
//  

$font-family-base = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
$font-size-base = 16px

$heading-weight = 500
$heading-margin = 0.67em 0
$heading-line-height = 1.2

$h1-color = $heading-color
$h1-weight = $heading-weight
$h1-size = 2.813rem
$h1-line-height = $heading-line-height

$h2-color = $heading-color
$h2-weight = $heading-weight
$h2-size = 2.813rem
$h2-line-height = $heading-line-height

$h3-color = $text-body
$h3-weight = $heading-weight
$h3-size = 2.813rem
$h3-line-height = $heading-line-height

$h4-color = $text-body
$h4-weight = $heading-weight
$h4-size = 1rem
$h4-line-height = $heading-line-height

$h5-color = $text-body
$h5-weight = $heading-weight
$h5-size = 2.813rem
$h5-line-height = $heading-line-height

$h6-color = $text-body
$h6-weight = $heading-weight
$h6-size = 2.813rem
$h6-line-height = $heading-line-height

//
// UI
//  

$ui-border-radius = 9px

//
// Tabs
//  

$tabs-bg = #fff
$tabs-bg-secondary = #f2f2f2
$tabs-border = 1px solid $border-color
$tabs-border-radius = $ui-border-radius

//
// Accordion
//  

$accordion-bg = #fff
$accordion-bg-secondary = #f2f2f2
$accordion-border = 1px solid $border-color
$accordion-border-radius = $ui-border-radius

//
// Cards
//  

$card-bg = #fff
$card-bg-secondary = #f2f2f2
$card-border = 1px solid $border-color
$card-border-outer = 5px solid rgba(#f5f5f5, 0.5)
$card-border-radius = $ui-border-radius
$card-border-outer-radius = $card-border-radius + 5px
$card-heading-size = $h4-size
